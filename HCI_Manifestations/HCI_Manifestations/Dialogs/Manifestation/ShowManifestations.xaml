<Window x:Class="HCI_Manifestations.dialogs.ShowManifestations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI_Manifestations.dialogs"
        mc:Ignorable="d"
        Title="Prikaz manifestacija" Height="550" Width="700" Icon="../../Resources/Icons/favicon.ico" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        
        <TextBox Grid.Column="0" Grid.Row="0" Margin="5"/>
        <Button Name="buttonSearch" ToolTip="Pretraži ili filtriraj manifestacije" Content="Pretraži" Grid.Column="1" Grid.Row="0" Margin="5" />
        <DataGrid Name="manifestationsGrid" SelectedItem="{Binding Path=SelectedManifestation, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Path=manifestations}" ToolTip="Tabelaran prikaz manifestacija" Margin="5" IsReadOnly="True" Grid.Column="0" Grid.Row="1" Grid.RowSpan="6" SelectionChanged="manifestationsGrid_SelectionChanged"/>
        <Button Name="buttonAdd" Content="Dodaj" ToolTip="Dodaj novu manifestaciju" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Margin="5" IsEnabled="True" Click="buttonAdd_Click"/>
        <Button Name="buttonEdit" Content="Uredi" ToolTip="Uredi odabranu manifestaciju" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Margin="5" IsEnabled="False" Click="buttonEdit_Click"/>
        <Button Name="buttonDelete" Content="Ukloni" ToolTip="Ukloni odabranu manifestaciju" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Margin="5" IsEnabled="False" Click="buttonDelete_Click"/>

    </Grid>
</Window>

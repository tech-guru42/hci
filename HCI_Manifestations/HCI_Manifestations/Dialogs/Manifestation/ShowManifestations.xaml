<Window x:Class="HCI_Manifestations.dialogs.ShowManifestations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI_Manifestations.dialogs"
        mc:Ignorable="d"
        Title="Prikaz manifestacija" Height="550" Width="700" Icon="../../Resources/Icons/favicon.ico" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <TextBox Name="searchInputName"  Grid.Column="0" Grid.Row="0" Margin="77,4,368,4"/>
        <Button Name="buttonSearch" ToolTip="Pretraži ili filtriraj manifestacije" Content="Pretraži" Grid.Column="1" Grid.Row="0" Margin="4" Click="buttonSearch_Click"/>
        <DataGrid Name="manifestationsGrid" SelectedItem="{Binding Path=SelectedManifestation, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Path=Manifestations}" ToolTip="Tabelaran prikaz manifestacija" Margin="5,0,5,5" IsReadOnly="True" Grid.Column="0" Grid.Row="3" Grid.RowSpan="4" SelectionChanged="manifestationsGrid_SelectionChanged"/>
        <Button Name="buttonAdd" Content="Dodaj" ToolTip="Dodaj novu manifestaciju" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Margin="0,10,2,10" IsEnabled="True" Click="buttonAdd_Click" Height="30"/>
        <Button Name="buttonEdit" Content="Uredi" ToolTip="Uredi odabranu manifestaciju" Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" Margin="0,10,2,10" IsEnabled="False" Click="buttonEdit_Click" Height="30"/>
        <Button Name="buttonDelete" Content="Ukloni" ToolTip="Ukloni odabranu manifestaciju" Grid.Row="5" VerticalAlignment="Center" Margin="0,10,2,10" IsEnabled="False" Click="buttonDelete_Click" Height="30" Grid.Column="1"/>
        <CheckBox x:Name="checkBoxHandicap" Content="Handicap" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBoxSmokingInside" Content="Smoking inside" HorizontalAlignment="Left" Margin="10,35,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBoxSmokingOutside" Content="Smoking outside" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <TextBox x:Name="searchInputId"  Grid.Column="0" Grid.Row="0" Margin="313,4,145,4"/>
        <ComboBox x:Name="comboBoxType" HorizontalAlignment="Left" Margin="467,4,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="searchInputLabelId" Content="Id" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top"/>
        <Label x:Name="searchInputLabelName" Content="Name" HorizontalAlignment="Left" Margin="245,4,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBoxAlcohol" HorizontalAlignment="Left" Margin="262,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="comboBoxPrice" HorizontalAlignment="Left" Margin="262,0,0,0" Grid.Row="2" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="labelAlcohol" Content="Alkohol" HorizontalAlignment="Left" Margin="188,7,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label x:Name="labelPrice" Content="Cena" HorizontalAlignment="Left" Margin="188,46,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.RowSpan="2"/>

    </Grid>
</Window>

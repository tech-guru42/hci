<Window x:Class="HCI_Manifestations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI_Manifestations"
        mc:Ignorable="d"
        Title="Menadzer manifestacija" Height="550" Width="950" Icon="Resources\Icons\favicon.ico" ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="White" Color="#000000" Opacity="0.5" />
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock ="Top">
            <Menu.ItemsPanel>
                <!--Podkontrola koja određuje kako se item-i prikazuju.-->
                <ItemsPanelTemplate>
                    <!-- Specificiramo ne šta je u kontroli nego template koji je formira-->
                    <DockPanel HorizontalAlignment="Stretch"></DockPanel>
                    <!-- Prikazujemo preko Dock Panela koji preuzme sav prostor -->
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="_Manifestacija">
                <MenuItem Header="_Dodaj manifestaciju" Click="Add_manifestation_Click" InputGestureText="Ctrl+M">
                    <MenuItem.Icon>
                        <Image Source="Resources\Icons\add.png" Width="12" Height="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator></Separator>
                <MenuItem Header="_Prikaži manifestacije" Click="Show_manifestations_Click" InputGestureText="Shift+M">
                    <MenuItem.Icon>
                        <Image Source="Resources\Icons\show_table.png" Width="12" Height="12"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Tip manifestacije">
                <MenuItem Header="_Dodaj tip manifestacije" Click="Add_type_Click" InputGestureText="Ctrl+T">
                    <MenuItem.Icon>
                        <Image Source="Resources\Icons\add.png" Width="12" Height="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator></Separator>
                <MenuItem Header="_Prikaži tipove manifestacija" Click="Show_types_Click" InputGestureText="Shift+T">
                    <MenuItem.Icon>
                        <Image Source="Resources\Icons\show_table.png" Width="12" Height="12"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Etikete">
                <MenuItem Header="_Dodaj etiketu" Click="Add_tag_Click" InputGestureText="Ctrl+E">
                    <MenuItem.Icon>
                        <Image Source="Resources\Icons\add.png" Width="12" Height="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator></Separator>
                <MenuItem Header="_Prikaži etikete" Click="Show_tags_Click" InputGestureText="Shift+E">
                    <MenuItem.Icon>
                        <Image Source="Resources\Icons\show_table.png" Width="12" Height="12"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Pomoć" HorizontalAlignment="Right" InputGestureText="F1">
                <MenuItem Header="_Dokumentacija" Click="Show_help_Click" InputGestureText="Ctrl+D">
                    <MenuItem.Icon>
                        <Image Source="Resources\Icons\document.png" Width="12" Height="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Demo mod" InputGestureText="Shift+D">
                    <MenuItem.Icon>
                        <Image Source="Resources\Icons\demo_play.png" Width="12" Height="12"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        
        <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Image Source="Resources\Images\sv2.png" Width="1050" Height="650"/>
            <StackPanel HorizontalAlignment="Right" Background="{StaticResource White}" DockPanel.Dock="Right" Orientation="Vertical" Width="200">

                <!--1. grupa-->
                <Button Name="buttonAddManifestation" Opacity="1" ToolTip="Dodaj novu manifestaciju" Margin="5" Padding="3" Click="Add_manifestation_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resources\Icons\add.png" Height="15" Width="15" HorizontalAlignment="Left"/>
                        <TextBlock Text="Nova manifestacija" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="3"/>
                    </StackPanel>
                </Button>

                <Button Name="buttonViewManifestations"  ToolTip="Prikaži sve manifestacije ili odaberi za ažuriranje" Margin="5" Padding="3" Click="Show_manifestations_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resources\Icons\show_table.png" Height="15" Width="15" HorizontalAlignment="Left"/>
                        <TextBlock Text="Prikaži manifestacije" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="3"/>
                    </StackPanel>
                </Button>

                <Separator></Separator>

                <!--2. grupa-->
                <Button Name="buttonAddManifestationType" ToolTip="Dodaj novi tip manifestacije"  Margin="5" Padding="3" Click="Add_type_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resources\Icons\add.png" Height="15" Width="15" HorizontalAlignment="Left"/>
                        <TextBlock Text="Novi tip" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="3"/>
                    </StackPanel>
                </Button>

                <Button Name="buttonViewManifestationTypes"  ToolTip="Prikazi sve tipove manifestacija" Margin="5" Padding="3" Click="Show_types_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resources\Icons\show_table.png" Height="15" Width="15" HorizontalAlignment="Left"/>
                        <TextBlock Text="Prikaži tipove" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="3"/>
                    </StackPanel>
                </Button>

                <Separator></Separator>

                <!--3. grupa-->
                <Button Name="buttonAddTag" ToolTip="Dodaj novu etiketu"  Margin="5" Padding="3" Click="Add_tag_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resources\Icons\add.png" Height="15" Width="15" HorizontalAlignment="Left"/>
                        <TextBlock Text="Nova etiketa" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="3"/>
                    </StackPanel>
                </Button>

                <Button Name="buttonViewTags"  ToolTip="Prikazi sve etikete" Margin="5" Padding="3" Click="Show_tags_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resources\Icons\show_table.png" Height="15" Width="15" HorizontalAlignment="Left"/>
                        <TextBlock Text="Prikaži etikete" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="3"/>
                    </StackPanel>
                </Button>

                <Separator></Separator>

            </StackPanel>

        </Grid>
        
    </DockPanel>

</Window>
